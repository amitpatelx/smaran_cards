<% content_for :title, "Card Details" %>

<div class="show-card">
  <div class="quote-content">
    <%= @card.quote %>
  </div>
  
  <% if @card.commentary.present? %>
    <div>
      <strong>Commentary:</strong>
      <div><%= @card.commentary %></div>
    </div>
  <% end %>
  
  <% if @card.author.present? %>
    <div>
      <strong>Author:</strong>
      <%= @card.author.name %>
    </div>
  <% end %>
  
  <% if @card.source.present? %>
    <div>
      <strong>Source:</strong>
      <%= @card.source.title %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= link_to "Edit", edit_card_path(@card), class: "btn btn-primary" %>
    <%= link_to "Back to cards", cards_path, class: "btn btn-secondary" %>
    <%= button_to "Delete", @card, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this card?" } %>
  </div>
</div>
