<%= form_with(model: card) do |form| %>
  <% if card.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :quote, style: "display: block" %>
    <%= form.rich_text_area :quote %>
  </div>

  <div>
    <%= form.label :commentary, style: "display: block" %>
    <%= form.rich_text_area :commentary %>
  </div>

  <div>
    <%= form.label :author_id, style: "display: block" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, { include_blank: "None" } %>
  </div>

  <div>
    <%= form.label :source_id, style: "display: block" %>
    <%= form.collection_select :source_id, Source.all, :id, :title, { include_blank: "None" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
