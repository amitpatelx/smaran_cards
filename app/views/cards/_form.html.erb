<%= form_with(model: card) do |form| %>
  <% if card.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>
      <ul>
        <% card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :quote %>
    <%= form.rich_text_area :quote, required: true %>
  </div>

  <div>
    <%= form.label :commentary %>
    <%= form.rich_text_area :commentary %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.collection_select :author_id, Author.all, :id, :name, { include_blank: "Select an author (optional)" } %>
  </div>

  <div>
    <%= form.label :source %>
    <%= form.collection_select :source_id, Source.all, :id, :title, { include_blank: "Select a source (optional)" } %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", cards_path, class: "btn btn-secondary" %>
  </div>
<% end %>
