<% content_for :title, "Author Details" %>

<div class="show-card">
  <h2 style="margin-bottom: 1rem;"><%= @author.name %></h2>
  
  <% if @author.bio.present? %>
    <div>
      <strong>Biography:</strong>
      <p style="margin-top: 0.5rem; color: var(--gray-700);"><%= @author.bio %></p>
    </div>
  <% end %>
  
  <div class="actions">
    <%= link_to "Edit", edit_author_path(@author), class: "btn btn-primary" %>
    <%= link_to "Back to authors", authors_path, class: "btn btn-secondary" %>
    <%= button_to "Delete", @author, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this author?" } %>
  </div>
</div>
