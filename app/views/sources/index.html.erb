<% content_for :title, "Sources" %>

<div class="header-actions">
  <h1>Sources</h1>
  <%= link_to "New Source", new_source_path, class: "btn btn-primary" %>
</div>

<div class="card-grid">
  <% @sources.each do |source| %>
    <div class="card">
      <h3 style="margin-bottom: 0.5rem; color: var(--gray-900);"><%= source.title %></h3>
      <% if source.description.present? %>
        <p style="color: var(--gray-600); margin-bottom: 0.5rem;"><%= source.description %></p>
      <% end %>
      <% if source.url.present? %>
        <p style="margin-bottom: 1rem;">
          <a href="<%= source.url %>" target="_blank" style="color: var(--primary); text-decoration: none;">
            <%= source.url %>
          </a>
        </p>
      <% end %>
      <div class="actions">
        <%= link_to "Show", source, class: "btn btn-primary" %>
        <%= link_to "Edit", edit_source_path(source), class: "btn btn-secondary" %>
        <%= button_to "Delete", source, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this source?" } %>
      </div>
    </div>
  <% end %>
</div>

