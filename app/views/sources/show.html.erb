<% content_for :title, "Source Details" %>

<div class="show-card">
  <h2 style="margin-bottom: 1rem;"><%= @source.title %></h2>
  
  <% if @source.description.present? %>
    <div style="margin-bottom: 1rem;">
      <strong>Description:</strong>
      <p style="margin-top: 0.5rem; color: var(--gray-700);"><%= @source.description %></p>
    </div>
  <% end %>
  
  <% if @source.url.present? %>
    <div>
      <strong>URL:</strong>
      <p style="margin-top: 0.5rem;">
        <a href="<%= @source.url %>" target="_blank" style="color: var(--primary); text-decoration: none;">
          <%= @source.url %> â†—
        </a>
      </p>
    </div>
  <% end %>
  
  <div class="actions">
    <%= link_to "Edit", edit_source_path(@source), class: "btn btn-primary" %>
    <%= link_to "Back to sources", sources_path, class: "btn btn-secondary" %>
    <%= button_to "Delete", @source, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this source?" } %>
  </div>
</div>
